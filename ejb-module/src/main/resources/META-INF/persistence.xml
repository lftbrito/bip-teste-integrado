<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" 
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    
    <persistence-unit name="beneficioPU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/BeneficioDS</jta-data-source>
        
        <!-- Entity classes -->
        <class>com.example.ejb.entity.Beneficio</class>
        
        <properties>
            <!-- Hibernate Dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            
            <!-- SQL Logging (disable in production) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Schema validation -->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            
            <!-- Connection pool -->
            <property name="hibernate.connection.pool_size" value="10"/>
            
            <!-- Pessimistic lock timeout (30 seconds) -->
            <property name="jakarta.persistence.lock.timeout" value="30000"/>
            
            <!-- Query timeout (10 seconds) -->
            <property name="jakarta.persistence.query.timeout" value="10000"/>
            
            <!-- Statistics (disable in production) -->
            <property name="hibernate.generate_statistics" value="false"/>
            
            <!-- Second level cache (disabled for simplicity) -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
            
            <!-- JDBC batch size -->
            <property name="hibernate.jdbc.batch_size" value="20"/>
            
            <!-- Order inserts and updates -->
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
